// CloudServiceOperator
// Can monitor, start/stop, control auto-scaling, & tag IaaS & PaaS services
{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "ServiceOperator20191118",
            "Effect": "Allow",
            "Action": [
                "ses:Verify*",
                "ec2:Cancel*",
                "ec2:CreateSnap*",
                "ec2:CreateTags",
                "ec2:CreateVolume",
                "ec2:DeleteSnapshot",
                "ec2:DeleteTags",
                "ec2:DeregisterImage",
                "ec2:ModifyCapacityReservation",
                "ec2:ModifyFleet",
                "ec2:ModifySpotFleetRequest",
                "ec2:ModifyVolume",
                "ec2:ModifyVolumeAttribute",
                "ec2:MonitorInstances",
                "ec2:RebootInstances",
                "ec2:ReleaseHosts",
                "ec2:RequestSpotFleet",
                "ec2:RequestSpotInstances",
                "ec2:ResetSnapshotAttribute",
                "ec2:RunInstances",
                "ec2:RunScheduledInstances",
                "ec2:StartInstances",
                "ec2:StopInstances",
                "ec2:Terminate*",
                "ec2:UnmonitorInstances",
				"autoscaling:*",
				"es:AddTags",
				"es:RemoveTags",
				"glacier:AddTagsToVault",
				"glacier:RemoveTagsFromVault",
				"tag:*",
				"servicediscovery:*",
				"ssm:*",
				"trustedadvisor:RefreshCheck",
				"trustedadvisor:Update*",
				"sts:DecodeAuthorizationMessage",
				"support:*"
            ],
            "Resource": "*"
        }
    ]
}
